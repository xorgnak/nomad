<style>
#canvas { width: 100%; height: 100%; position: fixed; left: 0; top: 0; z-index: -2; } 
#head > * { vertical-align: middle; }
#config input { width: 100%; }
button {
color: white;
text-shadow: 0px 0px 1px black;
text-shadow: 0px 0px 2px black;
background-color: rgba(0,0,0,0.0);
border: thick solid white;
padding: 3%;
}
#state > * { vertical-align: middle; }
#give > * {vertical-align: middle; }
#lvl { padding: 1%; }
.pin { padding: 2%; margin: 2%; font-size: xx-large; }
.pip { padding: 1%; margin: 1%; font-size: large; }
#badges { text-align: center; }
.badge { font-size: xx-large; padding: 2%; margin 3%; }
.open { border: thin solid white; padding: 0 3% 0 3%; font-size: small; }
.tog { border: thin solid white; padding: 0 3% 0 3%; font-size: small; }
</style>

<% @a = @user.attr.all %>

<canvas id='canvas'></canvas> 

  <input type='file' id='pic-file' style='position: fixed; top: -100px;' name='config[pic]'>
  <h1 style='color: white; background-color: black; margin: 0;'>
    <button class='material-icons' type='button'
	    onclick='$("#badge").toggle(); $("#display").toggle();'
	    style='background-color: black;font-size: xx-large; width: 20%; float: right;'>qr_code_2</button>
    <span onclick='$("#config").toggle(); $("#display").toggle();'>
      <% if @user.attr.has_key?(:name) && @user.attr[:name] != '' %>
      <%= @user.attr[:name] %>
      <% else %>
      <span style='font-size: xx-large;' class='material-icons'>settings</span> config
      <% end %>
    </span>
  </h1>
  
  <div id='config' style='background-color: black; display: none;'>
    <h1><input type='text' name='config[name]' placeholder='NAME' value='<%= @user.attr[:name] %>'></h1>
    <h1><input type='text' name='config[pitch]' placeholder='PITCH' value='<%= @user.attr[:pitch] %>'></h1>    
    <h1 style='width: 100%;'>
      <input type='text' name='config[link]' placeholder='LINK' value='<%= @user.attr[:link] %>' style='width: 100%;'>
    </h1>

    <h1 style='width: 100%;'>
      <select id='title' name='config[title]' style='width: 100%;'>
	<option value='title' selected disabled>title</option>
	<% if @user.attr[:class].to_i > 0 %>
	<option value='influencer'>influencer</option>
	<% end %>
	<% if @user.attr[:class].to_i > 1 %>
	<option value='manager'>manager</option>
	<% end %>
	<% if @user.attr[:class].to_i > 2 %>
	<option value='operator'>operator</option>
	<% end %>
	
	<% @user.titles.members.each do |e| %>
	<option value='<%= e %>'><%= e %></option>
	<% end %>
      </select>
    </h1>

    <h1 style='width: 100%;'>
      <select id='sponsor' name='config[zone]' style='width: 100%;'>
	<option value='sponsor' selected disabled>sponsor</option>
	<% @user.zones.members.each do |e| %>
	<option value='<%= e %>'><%= e %></option>
	<% end %>
      </select>
    </h1>
    <h1>
    <select id='contact' name='config[contact]' style='width: 20%;'>
      	<option value='none' selected>contact</option>
	<option value='sms'>sms</option>
	<option value='tel'>tel</option>
      </select>
      <datalist id='numbs'>
      <option value='<%= @user.attr[:phone] %>'>
      <option value='<%= ENV['PHONE'] %>'>
      </datalist>
      <input type='tel' list='numbs' name='config[phone]' style='width: 70%;' maxlength="10" size="10" placeholder='PHONE' value='<%= @user.attr[:phone] %>' pattern='[0-9]{10}'>
    </h1>
    <h1><input type='file' id='pic' accept="image/*" name='file'></h1>

    <% if @user.attr[:class].to_i > 4 %>
    <fieldset>
    <legend>waypoint</legend>
      <%= erb :waypoint, layout: false %>
    </fieldset>  
    <% end %>

    <% if @user.attr[:class].to_i >= 5 && @user.attr.has_key?(:zone) %>
    <fieldset id='urls'>
    <legend>urls</legend>
      <input name='waypoint[urls][new]' placeholder='https://'>
      <% Zone.new(@user.attr[:zone]).urls.each do |e| %>
      <% end %>
    </fieldset>
    <% end %>
    <button style='background-color: green; color: white;'>save</button>
  </div>
  
  <div id='badge' style='background-color: black; display: none; width: 100%;'>
    <div id='qrcode-wrap' style='width: 100%; text-align: center;'>
    <% if ENV['LVLS'] != 'false' %>
      <%= @user.sash.lvl %>
      <% end %>
      <div id="qrcode" style='padding: 2%; border: thick solid black; background-color: white;'></div>
      <h1 style='width: 100%; color: white; text-align: center;'><%= @user.attr[:sponsor] || OPTS[:domain] %></h1>
      <% if ENV['LVLS'] != 'false' %>
      <%= @user.sash.badges %>
      <% end %>
    </div>
  </div>
  
  <div id='magic' style='background-color: black; display: none; position: fixed; bottom: 0; left: 0; width: 100%; height: 100%;'>
    <fieldset>
    <legend style='padding: 0 3% 0 3%;'><input type='text' id='scan' name='scan' value='<%= @id %>' style='width: min-content;' disabled></legend>
    <ul style='background-color: white; color: black;'>
      <li><span style='padding: 2%;'>xp:</span><span id='xp'></span></li>
      
    <li><span style='padding: 2%;'>rank:</span>
    <% if @user.attr[:class].to_i >= 3 %>
    <input type='checkbox' id='promote' name='admin' value='rank' style='width: min-content;'>
    <% end %>
    <% if @user.attr[:class].to_i >= 6 %>
    <input id='rank' name='config[rank]' style='width: 50%;'>
    <% else %>
    <span id='rank'></span>
    <% end %>
    </li>
    
    <% if !params.has_key?(:z) %>
    <li><span style='padding: 2%;'>boss:</span>
    <% if @user.attr[:class].to_i >= 3 %>
    <input type='checkbox' id='promote' name='admin' value='boss' style='width: min-content;'>
    <% end %>
    <% if @user.attr[:class].to_i >= 6 %>
    <input id='boss' name='config[boss]' style='width: 50%;'>
    <% else %>
    <span id='boss'></span>
    <% end %>
    </li>
    
    <li><span style='padding: 2%;'>class:</span>
    <% if @user.attr[:class].to_i > 2 %>
    <span id='class'></span>
    <input id='set_class' name='config[class]' type='range' min='0' max='<%= @user.attr[:class].to_i - 1 %>' style='width: 40%;'>
    <% else %>
    <span id='class'></span>
    <%  %>
    </li>
    <% end %>
    <% end %>  
    <li><span style='padding: 2%;'>zone:</span><span id='z'></span></li>
    <li><span style='padding: 2%;'>role:</span><span id='role'></span></li>
    </ul>

    <% if !params.has_key?(:z) && @user.attr[:class].to_i >= 2 %>
    <datalist id='titles'>
      <% TITLES.members.each do |title| %>
      <option value='<%= title %>'>
	<% end %>
    </datalist>
    <h3 style='width: 100%; margin: 0; text-align: center; background-color: white; color: black;'><input type='text' name='title' list='titles' placeholder='title'></h3>
    <% end %>

    <% if !params.has_key?(:z) && @user.attr[:class].to_i >= 5 %>
    <datalist id='zones'>
      <% @user.zones.members.each do |zone| %>
      <option value='<%= zone %>'>
	<% end %>
    </datalist>
    <h3 style='width: 100%; margin: 0; text-align: center; background-color: white; color: black;'><input type='text' name='zone' list='zones' placeholder='zone'></h3>
        <% end %>
    
    <% if !params.has_key?(:z) && @user.attr[:class].to_i >= 6 %>
    <datalist id='contests'>
      <% VOTES.members.each do |vote| %>
      <option value='<%= vote %>'>
	<% end %>
    </datalist>
    <h3 style='width: 100%; margin: 0; text-align: center; background-color: white; color: black;'><input type='text' name='vote' list='contests' placeholder='contest'></h3>
    <% end %>
    
    <h3 id='give' style='width: 100%; text-align: center; background-color: white; color: black;'>
      <span class='material-icons' style='border: thick solid black; border-radius: 1000px;'>military_tech</span>
      <select name='give[of]' style='width: 30%; padding: 0;'>
      	<option selected disabled>give</option>
        <option value='vote'>vote</option>
	<% if @user.attr[:boss].to_i >= 2 %>
	<option value='badge'>badge</option>
	<% end %>
	<% if @user.attr[:boss].to_i >= 4 %>
	<option value='award'>award</option>
	<% end %>
        <% if @user.attr[:boss].to_i > 9 %>
        <option value='boss'>boss</option>
        <% end %>
      </select>
      <select name='give[type]' style='width: 30%; padding: 0;'>
	<option selected disabled>category</option>
	<% BADGES.each_pair do |name, badge| %>
	<option value='<%= name %>'><%= name %></option>
	<% end %>
      </select>
    </h3>
    </fieldset>
    <h3 style='width: 100%; text-align: center;'>
    <button style='background-color: green; color: white;'>send</button>
    </h3>
  </div>
  
  <div id='display' style='position: fixed; bottom: 0; width: 100%; color: white; background-color: black;'>
    <h1 id='sender' class='displays' style='width: 100%; text-align: center; margin: 0; display: none;'>
    <select name='send[mode]' style='width: 15%; vertical-align: middle;'>
    	    <option value='callback' selected>callback</option>
	    <% if @user.attr[:class].to_i >= 3 %>
    	    <option value='invite'>invite</option>
	    <% end %>
    </select>
    <input type='tel' name='send[number]' placeholder='PHONE' style='width: 55%; vertical-align: middle;' pattern='[0-9]{10}'>
    <button class='material-icons' style='vertical-align: middle; border: none;'>send</button>
    </h1>
    <div id='log' class='displays' style='width: 100%; height: 100%; color: white; overflow-y: scroll; margin: 0;'>
      <% @user.log.values.to_a.reverse.each do |e| %>
      <p style='width: 100%; margin: 0;'><%= e %></p>
      <% end %>
    </div>
    <%= erb :bank %>
    <% if Bank.wallet[@user.id].to_i > 0 %>
    <% if ENV['OWNERSHIP'] == 'franchise' %>
    <%= erb :franchisee %>
    <% else %>
    <%= erb :sponsor %>
    <% end %>
    <% if Bank.wallet[@user.id].to_i > 0 || Shares.by[@user.id].to_i > 0 %>
    <% if ENV['OWNERSHIP'] == 'franchise' %>
    <%= erb :franchise %>
    <% else %>
    <%= erb :shares %>
    <% end %>
    <% end %>
    <nav id='menu' style='width: 100%; font-size: small; text-align: center;'>
    <button class='open material-icons' id='open_log' value='log' style='border-color: orange;'>toc</button>
    <button class='open material-icons' id='open_sender' value='sender'>contact_phone</button>
    <button class='open material-icons' id='open_bank' value='bank'>savings</button>
    <% if Bank.wallet[@user.id].to_i > 0 %>
    <button class='open material-icons' id='open_sponsorship' value='sponsorship'>cabin</button>
    <% end %>
    <% if Bank.wallet[@user.id].to_i > 0 || Shares.by[@user.id].to_i > 0 %>
    <button class='open material-icons' id='open_shares' value='shares'>confirmation_number</button>
    <% end %>
    <% if @user.attr[:class].to_i >= 5 %>
    <a href='<%= @path %>/term?u=<%= @user.id %>' class='tog material-icons' style='text-decoration: none; color: white; border-color: red;'>terminal</a>
    <% end %>
    <a class='tog material-icons' style="color: white; text-decoration: none; color: white; border-color: blue;" href="<%= @path.gsub('https', 'mumble').gsub('http','mumble').gsub('://', "://#{@user.attr[:name] || 'nomad'}@") %>:<%= MUMBLE[request.host] %>/?version=1.2.0">headset_mic</a>
    </nav>
    <% @user.log.clear() %>
		      
  </div>
  <script>
  var roles = ['user', 'influencer', 'ambassdor', 'manager', 'agent', 'operator', 'owner', 'developer']
  <% if request.scheme == 'https' %>
  <%= erb :sw %>
  <% end %>
  <% z = []; 12.times { z << rand(16).to_s(16) }; @z = z.join('') %>
    var id = '<%= QRO[@id] %>';
var sender = true;
$('#qrcode').qrcode('<%= @path %>/?b=<%= @user.attr[:boss].to_i %>&p=<%= @user.attr[:xp].to_i %>&r=<%= @user.attr[:rank].to_i %>&c=<%= @user.attr[:class].to_i %>&x=<%= @user.attr[:zone] || 'solo' %>&u=' + id + '&z=<%= @z %>');
var inv = false;
var mnu = false;
$('#contact').val('<%= @user.attr[:contact] || 'contact' %>');
$('#sponsor').val('<%= @user.attr[:sponsor] || 'sponsor' %>');
$('#title').val('<%= @user.attr[:title] || 'title' %>');
function log(s) { $('#log').prepend(s + '</br>'); console.log(s); }
$(document).on('change', '#pic', function(ev) { ev.preventDefault(); });
<% if !/.onion/.match(request.host) %>
log('<span class="material-icons">copyright</span> 2021 <a href="https://github.com/xorgnak/nomad" style="color: white; text-decoration: none;">nomad</a>#<%= `git log --format="%H" -n 1`[0..3] %> <%= @domain.id %>');
<% end %>
    <% if !params.has_key? :installed %>
    log('<span class="material-icons">info</span> Add to homescreen to install.');
    <% end %>
<%= erb :scan %>
<%= erb :sha %>
<%# erb :coin %>
<%= erb :mqtt %>
<%# erb :websocket %>

$(document).on('change', '#set_class', function() {
    $('#class').text($(this).val());
    $('#role').text(roles[$(this).val()]);
});

$(document).on('click', '.ready', function(ev) {
    $('#form').submit();
});

$(document).on('click', '.open', function(ev) {
    ev.preventDefault();
    $('.displays').hide();
    $('.open').css('border-color', 'white');
    $('#open_' + $(this).val() ).css('border-color', 'orange');
    $('#' + $(this).val()).show();
});

$(document).on('change', '#s_qty', function(ev) {
    ev.preventDefault();
    var desc = $('#s_qty').val() + " shares for ";
    var amt =  ($('#s_qty').val() * <%= Shares.cost %>);
    $('#s_desc').text(desc);
    $('#s_tot').html("<span><span class='material-icons'>savings</span>" + amt + "</span>");
    if ( $('#s_qty').val() > 0 ) {
	$('#s_ready').show();
    } else {
	$('#s_ready').hide();
    }
});

$.post("/sw?u=<%= @user.id %>", { subscription: subscription.toJSON(), message: 'connected.' });

</script>
    
