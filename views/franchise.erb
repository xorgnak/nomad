<style>
#shares { background-color: white; color: black; }
h1 { width: 100%; }
h1 > * { vertical-align: middle; }
input { width: 60%; }
</style>
<div id='shares' class='displays' style='display: none;'>

<% @tot = Shares.shares(request.host) %>
<fieldset>
<legend>ownership</legend>
<ul>
<li>
<span>you own:</span>
<span><%= Shares.by(request.host)[@user.id].to_i || 0 %></span>
</li>
<% @tot.each_pair do |k,v| %>
<li>
<span><%= k %>:</span>
<span><%= v %></span>
</li>
<% end %>
</ul>
</fieldset>
<fieldset><legend>franchise</legend>
<h3 style='text-align: center; width: 100%; margin: 0;'>
<span class='material-icons'>savings</span><%= Shares.cost(request.host) %></span>
</h3>
<input type='hidden' name='shares[mode]' value='buy'>
<input type='hidden' id='s_qty' name='shares[qty]' value='1'>

<textarea name='franchise[tos][terms]' style='width: 100%; height: 100%;' disabled><%= TOS[request.host] || "don't do anything stupid." %>\n<%= FRANCHISE[request.host] || 'share and enjoy.' %></textarea>

<h3><input type='checkbox' name='franchise[tos][agreed]' value='<%= Time.now.utc %>'><span>do you agree to our terms?</span></h3>

<h3 style='text-align: center; width: 100%; margin: 0;'>
<button type='submit' id='s_ready' class='material-icons' name='act' value='shares'></button>
</h3>
</fieldset>
</div>
<script>
<% if params.has_key? :bare %>
$('#shares').show();
<% end %>
</script>