<style>
body { margin: 0; }
img { width: 100%; height: 100%; position: fixed; top: 0; left: 0; }
a { text-decoration: none; padding: 2%; border: thick outset grey; border-radius: 1000px; }
#lvl { padding: 1%; text-align: center; }
.pin { padding: 1%; margin: 1%; font-size: small; }
#badges { text-align: center; }
.badge { font-size: small; padding: 1%; margin 1%; }
</style>

<% if @user.attr.has_key? :link %>
<h1 style='width: 100%; position: fixed; top: 0; text-align: center;'>
    <a style='background-color: red;' href='<%= @user.attr[:link] %>'>FOLLOW</a>
</h1>
<% end %>

<div style='position: fixed; top: 20%; width: 100%; text-align: center;'>
<%= lvl(@id) %>
<% if @user.attr.has_key? :name %>
<h2 style='width: 100%; text-align: center; margin: 0; background-color: black; color: white;'><%= @user.attr[:name] %></h2>
<% end %>
<% if @user.attr.has_key? :title %>
<h3 style='width: 100%; text-align: center; margin: 0; background-color: black; color: white;'><%= @user.attr[:title] %></h3>
<% end %>
<% if @user.attr.has_key? :sponsor %>
<h4 style='width: 100%; text-align: center; margin: 0; background-color: black; color: white;'><%= @user.attr[:sponsor] %></h4>
<% end %>
</div>

<% if @user.attr.has_key? :image %>
<img src='<%= @user.attr[:image] %>'>
<% end %>

<div style='position: fixed; bottom: 30%; width: 100%; text-align: center;'>
<% if @user.attr.has_key? :pitch %>
<h2 style='width: 100%; text-align: center; margin: 0; background-color: black; color: white;'><%= @user.attr[:pitch] %></h2>
<% end %>
<%= badges(@id) %>
</div>
<% if @user.attr.has_key?(:contact) && params[:contact] != 'none' %>
<h1 style='width: 100%; position: fixed; bottom: 0; text-align: center;'>
    <a style='background-color: green;' href='<%= @user.attr[:contact] %>:<%= @user.attr[:phone] %>'>CONTACT</a>
</h1>
<% end %>
