<style>
#bank > h1 { width: 100%; margin: 0; }
#bank > h1 > * { vertical-align: middle; }
#bank > h1 > input { width: 60%; }
</style>
<div id='bank' class='displays' style='text-align: center; display: none;'>

<% if @user.coins.value > 0 %>
<h1>
<span class='material-icons'>toll</span>
<input type='number' name='bank[coins]' value='<%= @user.coins.value %>'>
<button class='material-icons' name='bank[direction]' value='bank'>savings</button>
</h1>
<% else %>
<h1>
<span class='material-icons'>toll</span>
<input type='number' name='bank[coins]' value='<%= @user.coins.value %>' disabled>
<button class='material-icons' name='bank[direction]' value='bank' disabled>savings</button>
</h1>
<% end %>

<% if Bank.wallet[@user.id] > 0 %>
<h1>
<span class='material-icons'>savings</span>
<input type='number' name='bank[credit]' value='<%= Bank.wallet[@user.id] %>'>
<button class='material-icons' name='bank[direction]' value='user'>toll</button>
</h1>
<% else %>
<h1>
<span class='material-icons'>savings</span>
<input type='number' name='bank[credit]' value='<%= Bank.wallet[@user.id] %>' disabled>
<button class='material-icons' name='bank[direction]' value='user' disabled>toll</button>
</h1>
<% end %>

</div>
