<% @f = []; Dir['man/*'].each do |f| %>
<% @f << f %>
<fieldset class='<%= f %>'>
<legend><%= f %></legend>
<p><%= File.read(f) %></p>
<% end %>

<select id='ch'>
<option selected disabled>section</option>
<% @f.each do |f| %>
<option value='<%= f %>'>
<% end %>
</select>

<script>
$(document).on('change', 'select', function() {
$('fieldset').hide();
$('.' + $(this).val()).show();
});
</script>